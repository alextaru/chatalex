extends ../layout

block content
  h1 Atualizar Amigos
  hr
  br
  if messages.erro
    div(class="alert alert-danger")
      each msg in messages.erro
        b= msg
        br
    br
  form(method="POST", action="/amigos/edit/#{model._id}", role="form")
    div(class="form-group")
      label Nome
      input(type="text", class="form-control", name="nome", placeholder="Nome",value="#{model.nome}", autofocus, required)
    div(class="form-group")
      label E-mail
      input(type="email", class="form-control", name="email", placeholder="E-mail",value="#{model.email}", required)
    button(type="submit" class="btn btn-success") Salvar
  br
  a(href="/amigos") Voltar
